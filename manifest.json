{
  "manifest_version": 3,
  "name": "CI Tracker",
  "version": "0.1.0",
  "permissions": ["storage"],
  "background": {
    "scripts": ["src/background.js"],
    "service_worker": "src/background.js"
  },
  "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "exclude_matches": [
          "*://www.youtube.com/embed/*"
        ],
        "js": ["src/trackers/track-youtube.js"],
        "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.youtube.com/embed/*",
        "*://www.youtube-nocookie.com/embed/*"
      ],
      "js": ["src/trackers/inject-yt-iframe-api.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
        "resources": [ "track-embeded-youtube.js", "track-shaka.js"],
        "matches": [ "<all_urls>" ]
    }
  ]
}